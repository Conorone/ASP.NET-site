@model IEnumerable<WebApp.Models.ProductModel>
@using Microsoft.IdentityModel.Tokens;

<!DOCTYPE html>
<html>
    
<head>
    <link rel="stylesheet" type="text/css" href="~/css/MockPages/products.css" />
</head>
<body class="bg-dark text-white"> <!-- Applying dark background and text color -->
    <div class="container text-center my-4">
        <h1 class="display-4">Bug Emporium</h1> <!-- Large title -->
    </div>

    <div class="container d-flex flex-wrap justify-content-around"> <!-- Spaced card layout -->
        @foreach (var item in Model)
        {
            <div class="card mb-4 mx-2 text-white" 
                 onclick="window.location.href='@Url.Action("ViewProduct", "Product", new { productID = item.ID } )';" 
                 style="cursor: pointer; width: 18rem;">
                 
                @if (item.Image != null && item.Image.Length > 0)
                    {
                        <img src="data:image/png;base64,@Convert.ToBase64String(item.Image)" class="card-img-top" alt="Product Image">
                    }
                    else
                    {
                        <img src="/images/placeholder.png" class="card-img-top" alt="No Image Available">
                    }
                
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@Html.DisplayFor(m => item.Price)</p>
                    <a href="#" class="btn btn-primary">Add to cart</a>
                </div>
            </div>
        }
    </div>
</body>
</html>