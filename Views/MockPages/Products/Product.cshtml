@model WebApp.Models.ProductModel

<head>
    <link rel="stylesheet" type="text/css" href="~/css/MockPages/singleProduct.css" />
</head>

@await Html.PartialAsync("_TopBar.cshtml")

<div class="product-container">
    <div class="product-image">
        @if (Model.Image != null && Model.Image.Length > 0)
        {
            <div>
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Image)" class="img-thumbnail" alt="Product Image" class="img-fluid large-image"/>
            </div>
        }
    </div>

    <div class="product-details">
        <h4 class="product-title">@Html.DisplayFor(product => product.Name)</h4>
        <h3 class="product-price">@Html.DisplayFor(product => product.Price)</h3>

        <form asp-action="AddToCart" asp-controller="Cart" method="post">
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="Name" />
            <input type="hidden" asp-for="Description" />
            <input type="hidden" asp-for="Price" />
            <input type="hidden" asp-for="Image" />


            @if(Model.Stock > 0) {
                <div class="add-product-line">
                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                    <div class="form-group">
                        <label for="quantity">Quantity:</label>
                        <input type="number" id="quantity" name="quantity" value="1" min="1" class="form-control" />
                    </div>
                </div>
            }

            <div class="stock">
                @if(Model.Stock <= 0) {
                    <div style="color:red">Out of stock!</div>
                }
                else if(Model.Stock < 20) {
                    @Html.DisplayFor(product => product.Stock)
                    <div>&nbsp;left in stock</div>
                } 
                else {
                    <div>In Stock</div>
                }
            </div>
        </form>
        <p class="description">@Html.DisplayFor(product => product.Description)</p>
    </div>
</div>